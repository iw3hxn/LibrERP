<?xml version="1.0"?>
<openerp>
    <data noupdate="0">
        <record id="ir_header_webkit_vat_period_end_statement" model="ir.header_webkit">
            <field name="orientation">Portrait</field>
            <field name="format">A4</field>
            <field name="margin_top">35</field>
            <field name="html"><![CDATA[<html>
    <head>
        <meta content="text/html; charset=UTF-8" http-equiv="content-type"/>
        <script>
            function subst() {
            var vars={};
            var x=document.location.search.substring(1).split('&');
            for(var i in x) {var z=x[i].split('=',2);vars[z[0]] = unescape(z[1]);}
            var x=['frompage','topage','page','webpage','section','subsection','subsubsection'];
            for(var i in x) {
            var y = document.getElementsByClassName(x[i]);
            for(var j=0; j<y.length; ++j) y[j].textContent = vars[x[i]];
                }
            }
        </script>
    </head>
    <body style="border:0; margin: 0;" onload="subst()">
    <% setLang(company.partner_id.lang or "en_US") %>

    <h3>VAT Statement Summary</h3>
    <table style="border-bottom: 4px solid black; width: 100%; padding-bottom: 8px">
     <tr>
        <td>
            <div> <strong>${company.partner_id.name or ''|entity} </strong> - ${company.partner_id.address and company.partner_id.address[0].street or ''|entity} ${company.partner_id.address and company.partner_id.address[0].street2 or ''|entity} - ${company.partner_id.address and company.partner_id.address[0].zip or ''|entity} ${company.partner_id.address and company.partner_id.address[0].city or ''|entity} ( ${company.partner_id.address and company.partner_id.address[0].province and company.partner_id.address[0].province.code or ''|entity} ) - P. IVA: ${company.partner_id.vat or ''|entity} / Codice Fiscale: ${company.partner_id.fiscalcode or ''|entity}
            </div>
        </td>
     </tr> 
    </table>
    <br/>
    </body>
</html>]]>
</field>
            <field name="footer_html"><![CDATA[<html>
    <head>
        <meta content="text/html; charset=UTF-8" http-equiv="content-type"/>
        <script>
            function subst() {
            var vars={};
            var x=document.location.search.substring(1).split('&');
            for(var i in x) {var z=x[i].split('=',2);vars[z[0]] = unescape(z[1]);}
            var x=['frompage','topage','page','webpage','section','subsection','subsubsection'];
            for(var i in x) {
            var y = document.getElementsByClassName(x[i]);
            for(var j=0; j<y.length; ++j) {
            if(x[i] == 'page') {y[j].textContent = eval(vars[x[i]]) + ${objects[0].fiscal_page_base};}
            else{y[j].textContent = vars[x[i]];}
            }

                }
            }
        </script>
    </head>
    <body style="border:0; margin: 0;" onload="subst()">
        <table style="border-top: 1px solid black; width: 100%">
            <tr >
                <td style="text-align:right;font-size:12;" width="95%">Page ${objects[0].period_ids and objects[0].period_ids[0].fiscalyear_id and objects[0].period_ids[0].fiscalyear_id.name or ''|entity}/<span class="page"/></td><td style="text-align:left;font-size:12;"></td>
            </tr>
        </table>
    </body>
</html>]]></field><field name="css" ><![CDATA[
tr {
    page-break-inside: avoid;
}
thead{
    display: table-header-group; /* http://code.google.com/p/wkhtmltopdf/issues/detail?id=9#c8 */
}
]]> </field>
            <field  name="name">VAT Statement Summary</field>
        </record>

        <record id="print_vat_period_end_statement" model="ir.actions.report.xml">
            <field name="name">VAT Statement Summary</field>
            <field name="type">ir.actions.report.xml</field>
            <field name="model">account.vat.period.end.statement</field>
            <field name="report_name">account.print.vat.period.end.statement</field>
            <field name="report_type">webkit</field>
            <field name="report_rml">account_vat_period_end_statement/report/vat_period_end_statement.mako</field>
            <field name="webkit_header" ref="ir_header_webkit_vat_period_end_statement"/>
        </record>

    </data>
</openerp>
